namespace frc.taurus.messages;

table DrivetrainGoal {
  // Timestamp (64-bit unsigned integer)
  timestamp:ulong;

  // Position of the throttle (positive forwards).
  throttle:float;

  // Position of the steering wheel (positive = turning left when going forwards).
  steering:float;
 
  // True to shift into high, false to shift into low.
  high_gear:bool;

  // True to activate quickturn.
  quick_turn:bool;
}

root_type DrivetrainGoal;
